{% import "content/boldifselected.jinja2" as macros %}
<div class="menu slideout-menu">
    <div class="close-container" id="menu-close">
        <div class="leftright"></div>
        <div class="rightleft"></div>
    </div>
    <ul>
        <li>
            <a href="/">
                {{ macros::boldifselected(name='Timeline',current=page, pagename='timeline') }}
            </a>
            <ul>
                {% for key_year, pics in sortedbyyears %}
                <li> <a href="/#{%if key_year != year %}{{key_year}}{%else%}{{top}}{% endif %}"> {{key_year}} </a></li>
                {% endfor %}
            </ul>
        </li>
        <li>
            <a href="/categories">
                {{ macros::boldifselected(name='Categories',current=page, pagename = 'categories') }}
            </a>
            <ul>
                {% for key_category, pics in sortbycategories %}
                    {% if key_category != "Portraiture" %}
                    <li> <a href="/categories#{{key_category}}"> {{key_category}} </a> </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </li>
        <li> 
            <a href="/portraiture">
                {{ macros::boldifselected(name='Portraiture',current=page,pagename= 'portraiture') }}
            </a>
        </li>
        {% if storeData %}
            <li> 
                <a href="/store">
                    {{ macros::boldifselected(name='Print store',current=page,pagename= 'store') }}
                </a>
            </li>
        {% endif %}
        <li> 
            <a href="/about"> 
                {{ macros::boldifselected(name='About', current=page,pagename="about") }} 
            </a> 
        </li>
    </ul>
</div>